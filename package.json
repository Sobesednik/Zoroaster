{
  "name": "zoroaster",
  "version": "1.1.0",
  "description": "A minimal JavaScript testing framework for Node.js.",
  "main": "src",
  "scripts": {
    "test": "node run_tests",
    "test-es5": "node run_tests --force",
    "watch": "node run_tests --watch",
    "build": "bestie bin,src,test,assert",
    "build-run": "babel run_tests-es7.js --out-file run_tests.js",
    "example": "zoroaster examples/test/Zoroaster_test.js",
    "example.js": "zoroaster example.js"
  },
  "bin": {
    "zoroaster": "bin/zoroaster.js",
    "zoroaster-es5": "es5/bin/zoroaster.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artdecocode/zoroaster.git"
  },
  "keywords": [
    "test"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/zoroaster/issues"
  },
  "homepage": "https://github.com/artdecocode/zoroaster#readme",
  "dependencies": {
    "assert-diff": "1.2.5",
    "assert-throws": "1.3.1",
    "catchment": "2.0.1",
    "clean-stack": "1.3.0",
    "promto": "1.0.1",
    "spawncommand": "1.1.0"
  },
  "devDependencies": {
    "bestie": "1.0.0",
    "colors": "1.2.1",
    "diff": "3.5.0",
    "noddy": "1.1.1",
    "strip-ansi": "4.0.0"
  }
}
