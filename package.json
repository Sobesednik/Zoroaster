{
  "name": "zoroaster",
  "version": "2.4.0",
  "description": "An Art Deco JavaScript testing framework for Node.js",
  "main": "build",
  "scripts": {
    "t": "node src/bin/alamode",
    "test": "yarn t test/spec",
    "test-build": "ALAMODE_ENV=test-build yarn t test/spec",
    "test-all": "yarn-s test test-build",
    "b": "alamode src -o build -i bin/alamode.js",
    "doc": "NODE_DEBUG=doc doc documentary -o README.md",
    "build": "yarn-s b doc",
    "dev": "node src/bin/alamode",
    "lint": "eslint .",
    "example/simple.js": "node src/bin example/simple.js -b",
    "example/Zoroaster/": "node src/bin example/Zoroaster/test/spec -b"
  },
  "files": [
    "build",
    "assert.js"
  ],
  "bin": {
    "zoroaster": "build/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artdecocode/zoroaster.git"
  },
  "keywords": [
    "test",
    "tdd",
    "mocha",
    "jest",
    "tape"
  ],
  "author": "Anton <anton@adc.sh>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artdecocode/zoroaster/issues"
  },
  "homepage": "https://github.com/artdecocode/zoroaster#readme",
  "dependencies": {
    "alamode": "1.4.0",
    "argufy": "1.2.1",
    "assert-diff": "2.0.3",
    "assert-throws": "2.1.0",
    "catchment": "3.0.1",
    "clean-stack": "1.3.0",
    "erte": "1.1.4",
    "makepromise": "3.0.1",
    "mismatch": "1.0.2",
    "promto": "1.0.1",
    "spawncommand": "2.0.1",
    "usually": "1.0.0",
    "yarn-s": "1.1.0"
  },
  "devDependencies": {
    "diff": "3.5.0",
    "documentary": "1.10.0",
    "erotic": "1.2.1",
    "eslint-config-artdeco": "1.0.1",
    "snapshot-context": "2.0.4",
    "strip-ansi": "4.0.0"
  }
}
