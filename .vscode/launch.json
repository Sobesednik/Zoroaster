{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/src/bin/index.js",
      "env": {
        "DEBUG": "1",
        // "ALAMODE_ENV": "test-build"
      },
      "args": [
        // "test/temp/test.js",
        "test/spec",
        "test/mask",
        "-s", "test/snapshot",
        // "test/fixture/snapshot/service.js",
        "-a",
        "-w",
        "-t",
        "999999999"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Depack",
      "program": "${workspaceFolder}/depack/bin/zoroaster.js",
      "env": {
        "ALAMODE_ENV": "test-build"
      },
      "args": [
        // "test/temp/test.js",
        // "test/fixture/snapshot/extension.js",
        "test/fixture/snapshot-ts-update.js", "-r", "test/fixture", "-i",
        // "test/spec",
        // "test/mask",
        "-s", "test/temp/snapshot",
        // "test/fixture/snapshot/service.js",
        "-a", "-w", "-t", "999999999"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Example",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "env": {
        "DEBUG": "1",
      },
      "args": [
        "example/Zoroaster/test/spec",
        "example/Zoroaster/test/mask",
        "-a",
        "-w",
        "-t",
        "999999999"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Doc",
      "program": "${workspaceFolder}/node_modules/.bin/doc",
      "env": {
        "NODE_DEBUG": "doc",
      },
      "args": [
        "documentary",
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster Build",
      "program": "${workspaceFolder}/build/bin/index.js",
      "args": [
        "test/spec/index.js",
        "-w",
        "-a"
      ],
      "env": {
        "ALAMODE_ENV": "test-debug",
        "ZOROASTER_TIMEOUT": "9999999"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
