{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster",
      "program": "${workspaceFolder}/src/bin/alamode.js",
      "args": [
        "test/spec",
        "-a",
        "-w"
      ],
      "env": {
        "ALAMODE_ENV": "test-debug",
        "ZOROASTER_TIMEOUT": "9999999"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Zoroaster Build",
      "program": "${workspaceFolder}/build/bin/index.js",
      "args": [
        "test/spec/index.js",
        "-w",
        "-a"
      ],
      "env": {
        "ALAMODE_ENV": "test-debug",
        "ZOROASTER_TIMEOUT": "9999999"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
